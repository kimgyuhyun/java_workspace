package sec04.exam03;
//return문
public class TestCar {
	//필드
	int gas;
	
	//생성자
	
	//메소드
	void setgas(int gas) { //< 리턴값이 없는 메소드로 매개값을 받아서 gas 필드값을 변경
		this.gas = gas;   
	}
	
	boolean isLeftGas() {
		if(gas == 0) {
			System.out.println("gas가 없습니다.");
			return false; //false를 리턴
		}
		System.out.println("gas가 있습니다.");
		return true; //true를 리턴
	}

}
